extends layout

block content
  h1(style="color: blue;padding:10px;margin:10px;font-size:25px") A Random Item
  - var image_names = ['hat1.jpg', 'hat2.jpg', 'hat3.jpg', 'hat4.jpg', 'hat5.jpg']
  - for (let i = 0; i < 3; i++)
    - var randomIndex = Math.floor(Math.random() * 5)
    img(src=`/images/${image_names[randomIndex]}`, alt=image_names[randomIndex], height="300", width="300") 